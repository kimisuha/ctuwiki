  title update for #{ info.tenkhoa }
.container
  .form.card.w-75.m-auto.bg-black.text-light
    form.text-capitalize(method='POST' action=url)
      .form-group
        label.mb-2(for='_id') ma khoa
        input#_id.form-control(type='text' name='_id' placeholder='something' value= info._id disabled="false")
        p error: 
      .form-group
        label.mb-2(for='tenkhoa') ten khoa
        input#tenkhoa.form-control(type='text' name='tenkhoa' placeholder='something' value= info.tenkhoa)
        p error: 
        .form-group
        label.mb-2(for='tentruongkhoa') ten truong khoa
        input#tentruongkhoa.form-control(type='text' name='tentruongkhoa' placeholder='something' value= info.tentruongkhoa)
        p error:
      .form-group
        label.mb-2(for='gioithieu') gioi thieu
        textarea#gioithieu.form-control(name='gioithieu' style='height: 12rem;') #{ info.gioithieu }
        p error: 
      button.btn.btn-success.mt-1.mb-2(style='margin-left: 45%;' type='submit') update
